<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.ac.unsyiah.elektro.mobile.kalkulator3.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/numAngka1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lblHasil"
        android:layout_toEndOf="@+id/lblHasil" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/numAngka2"
        android:layout_below="@+id/radioGroup"
        android:layout_alignLeft="@+id/numAngka1"
        android:layout_alignStart="@+id/numAngka1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/btnHitung"
        android:onClick="onClickTombolHasil"
        android:layout_below="@+id/numAngka2"
        android:layout_alignLeft="@+id/numAngka2"
        android:layout_alignStart="@+id/numAngka2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/lblHasil"
        android:layout_below="@+id/btnHitung"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numAngka1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/radioGroup">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/operatorTambah"
            android:id="@+id/operatorTambah"
            android:layout_below="@+id/numAngka1"
            android:layout_alignLeft="@+id/numAngka1"
            android:layout_alignStart="@+id/numAngka1"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/operatorKurang"
            android:id="@+id/operatorKurang"
            android:checked="false"
            android:layout_above="@+id/optKali"
            android:layout_alignRight="@+id/btnHitung"
            android:layout_alignEnd="@+id/btnHitung" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/operatortKali"
            android:id="@+id/operatorKali"
            android:layout_below="@+id/optTambah"
            android:layout_alignLeft="@+id/optTambah"
            android:layout_alignStart="@+id/optTambah"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/operatorBagi"
            android:id="@+id/operatorBagi"
            android:checked="false"
            android:layout_above="@+id/numAngka2"
            android:layout_alignLeft="@+id/optKurang"
            android:layout_alignStart="@+id/optKurang" />

    </RadioGroup>


</RelativeLayout>
